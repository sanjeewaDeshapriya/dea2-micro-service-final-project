<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ====================================================================
         WMS Order Service — Logback Configuration
         Log directory : logs/   (project root)
         Retention     : 180 days (≈ 6 months)
         Max file size : 100 MB per file
         Total size cap: 5 GB
         ==================================================================== -->

    <!-- ─── Properties ──────────────────────────────────────────────────── -->
    <property name="LOG_DIR"       value="logs"/>
    <property name="APP_NAME"      value="order-service"/>
    <property name="LOG_PATTERN"   value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="MAX_HISTORY"   value="180"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="TOTAL_SIZE_CAP" value="5GB"/>

    <!-- ─── 1. Console Appender ─────────────────────────────────────────── -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ─── 2. Application Log (all levels) ─────────────────────────────── -->
    <!--     logs/order-service.log              (current)                   -->
    <!--     logs/archived/order-service.2026-02-15.0.log.gz  (rolled)      -->
    <appender name="APP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ─── 3. Error-Only Log ───────────────────────────────────────────── -->
    <!--     logs/order-service-error.log        (current)                   -->
    <!--     logs/archived/order-service-error.2026-02-15.0.log.gz (rolled) -->
    <appender name="ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ─── 4. Request/Response Log (HTTP traffic) ──────────────────────── -->
    <!--     logs/order-service-http.log          (current)                  -->
    <appender name="HTTP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-http.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${APP_NAME}-http.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ─── Logger Configuration ────────────────────────────────────────── -->

    <!-- Application loggers -->
    <logger name="com.wms.orderservice" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_LOG"/>
        <appender-ref ref="ERROR_LOG"/>
    </logger>

    <!-- Controller / HTTP layer → also writes to http log -->
    <logger name="com.wms.orderservice.controller" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_LOG"/>
        <appender-ref ref="ERROR_LOG"/>
        <appender-ref ref="HTTP_LOG"/>
    </logger>

    <!-- Exception handler → http log + error log -->
    <logger name="com.wms.orderservice.exception" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_LOG"/>
        <appender-ref ref="ERROR_LOG"/>
        <appender-ref ref="HTTP_LOG"/>
    </logger>

    <!-- Spring Web / MVC -->
    <logger name="org.springframework.web" level="INFO"/>

    <!-- Hibernate SQL (set to DEBUG to see queries, WARN to silence) -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- ─── Root Logger ─────────────────────────────────────────────────── -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_LOG"/>
        <appender-ref ref="ERROR_LOG"/>
    </root>

</configuration>
