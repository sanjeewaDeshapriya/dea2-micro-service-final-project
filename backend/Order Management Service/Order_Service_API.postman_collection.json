							"code": 200,
							"header": [{"key": "Content-Type", "value": "application/json"}],
							"body": "{\n  \"id\": \"a1b2c3d4-e5f6-7890-abcd-ef1234567890\",\n  \"orderNumber\": \"ORD-2026-000001\",\n  \"customerId\": \"CUST-LK-001\",\n  \"status\": \"CREATED\",\n  \"partialAllowed\": true,\n  \"totalAmount\": 7000.00,\n  \"createdAt\": \"2026-02-15T11:00:00+05:30\",\n  \"updatedAt\": \"2026-02-15T11:00:00+05:30\",\n  \"items\": [\n    {\n      \"id\": \"b2c3d4e5-f6a7-8901-bcde-f12345678901\",\n      \"itemId\": \"ITEM-001\",\n      \"requestedQty\": 10,\n      \"approvedQty\": 0,\n      \"unitPrice\": 250.00\n    }\n  ]\n}"
						},
						{
							"name": "404 - Order Not Found",
							"status": "Not Found",
							"code": 404,
							"header": [{"key": "Content-Type", "value": "application/json"}],
							"body": "{\n  \"timestamp\": \"2026-02-15T11:00:00+05:30\",\n  \"path\": \"/api/v1/orders/00000000-0000-0000-0000-000000000000\",\n  \"errorCode\": \"NOT_FOUND\",\n  \"message\": \"Order not found with id: 00000000-0000-0000-0000-000000000000\",\n  \"details\": []\n}"
						}
