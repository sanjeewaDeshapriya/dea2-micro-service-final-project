					"response": [
						{
							"name": "201 - Order Created (No Partial)",
							"status": "Created",
							"code": 201,
							"header": [{"key": "Content-Type", "value": "application/json"}],
							"body": "{\n  \"id\": \"e5f6a7b8-c9d0-1234-efab-345678901234\",\n  \"orderNumber\": \"ORD-2026-000002\",\n  \"customerId\": \"CUST-LK-002\",\n  \"status\": \"CREATED\",\n  \"partialAllowed\": false,\n  \"totalAmount\": 95000.00,\n  \"createdAt\": \"2026-02-15T11:01:00+05:30\",\n  \"updatedAt\": \"2026-02-15T11:01:00+05:30\",\n  \"items\": [\n    {\n      \"id\": \"f6a7b8c9-d0e1-2345-fabc-456789012345\",\n      \"itemId\": \"ITEM-004\",\n      \"requestedQty\": 50,\n      \"approvedQty\": 0,\n      \"unitPrice\": 1500.00\n    },\n    {\n      \"id\": \"a7b8c9d0-e1f2-3456-abcd-567890123456\",\n      \"itemId\": \"ITEM-005\",\n      \"requestedQty\": 25,\n      \"approvedQty\": 0,\n      \"unitPrice\": 800.00\n    }\n  ]\n}"
						}
					]
				}
			]
		},
		{
			"name": "Retrieve Orders",
			"description": "Endpoints to get orders by ID or list with filters",
			"item": [
